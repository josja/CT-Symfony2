{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todo list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Done</th>
                <th>Todo</th>
                <th>Priority</th>
                <th>Created</th>
                <th>Due</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td><a href="{{ path('todo_show', { 'id': todo.id }) }}">{{ todo.id }}</a></td>
                <td>{% if todo.done %}Yes{% else %}No{% endif %}</td>
                <td>{{ todo.todo }}</td>
                <td>{{ todo.priority }}</td>
                <td>{% if todo.created %}{{ todo.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if todo.due %}{{ todo.due|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('todo_show', { 'id': todo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('todo_edit', { 'id': todo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todo_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
