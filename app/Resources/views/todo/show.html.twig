{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{% if todo.done %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Todo</th>
                <td>{{ todo.todo }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ todo.priority }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if todo.created %}{{ todo.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Due</th>
                <td>{% if todo.due %}{{ todo.due|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todo_edit', { 'id': todo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
