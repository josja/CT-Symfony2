{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todo creation</h1>

    {{ form_start(form) }}
        <div style="display: none">
            {{ form_widget(form.created) }}
            {{ form_widget(form.done) }}
        </div>
        {{ form_rest(form) }}

        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('todo_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
