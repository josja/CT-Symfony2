{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <table class="narrow">
        <tbody>
            <tr>
                <th>Todo</th>
                <td>{{ form_row(form.todo, {'label_attr': {'class': 'hidden'}}) }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ form_row(form.priority, {'label_attr': {'class': 'hidden'}}) }}</td>
            </tr>
            <tr>
                <th>Due</th>
                <td>{{ form_row(form.due, {'label_attr': {'class': 'hidden'}}) }}</td>
            </tr>
            <tr>
                <td colspan="2">
                    <a href="{{ path('todo_index') }}" class="button">Back</a>

                    <div class="hidden">{{ form_rest(form) }}</div>
                    <div class="right"><input type="submit" value="Create" /></div>
                    {{ form_end(form) }}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
